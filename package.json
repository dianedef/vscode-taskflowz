{
    "name": "taskflowz",
    "displayName": "%displayName%",
    "description": "%description%",
    "version": "0.0.1",
    "publisher": "votre_nom",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/votre_repo/taskflowz"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "task",
        "todo",
        "productivity",
        "organization",
        "workflow"
    ],
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "TaskFlows",
                    "name": "%viewName%"
                }
            ]
        },
        "commands": [
            {
                "command": "taskflows.focus",
                "title": "%focusTaskFlows%",
                "icon": "$(list-tree)"
            },
            {
                "command": "taskflows.addTask",
                "title": "%addTask%",
                "icon": "$(add)"
            },
            {
                "command": "taskflows.addSubTask",
                "title": "%addSubTask%",
                "icon": "$(add)"
            },
            {
                "command": "taskflows.editTask",
                "title": "%editTask%",
                "icon": "$(edit)"
            },
            {
                "command": "taskflows.deleteTask",
                "title": "%deleteTask%",
                "icon": "$(trash)"
            },
            {
                "command": "taskflows.toggleTaskCompletion",
                "title": "%toggleTaskCompletion%",
                "icon": "$(check)"
            },
            {
                "command": "taskflows.undo",
                "title": "Annuler",
                "icon": "$(discard)"
            },
            {
                "command": "taskflows.redo",
                "title": "RÃ©tablir",
                "icon": "$(redo)"
            }
        ],
        "keybindings": [
            {
                "command": "taskflows.focus",
                "key": "alt+t",
                "mac": "alt+t"
            },
            {
                "command": "taskflows.addTask",
                "key": "alt+n",
                "mac": "alt+n"
            },
            {
                "command": "taskflows.addSubTask",
                "key": "alt+shift+n",
                "mac": "alt+shift+n",
                "when": "sideBarFocus"
            },
            {
                "command": "taskflows.editTask",
                "key": "f2",
                "mac": "f2",
                "when": "sideBarFocus"
            },
            {
                "command": "taskflows.deleteTask",
                "key": "ctrl+x",
                "mac": "cmd+x",
                "when": "sideBarFocus"
            },
            {
                "command": "taskflows.toggleTaskCompletion",
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "when": "sideBarFocus"
            },
            {
                "command": "list.focusDown",
                "key": "down",
                "when": "view == TaskFlows && viewFocus"
            },
            {
                "command": "list.focusUp",
                "key": "up",
                "when": "view == TaskFlows && viewFocus"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "taskflows.addTask",
                    "when": "view == 'TaskFlows'",
                    "group": "navigation"
                },
                {
                    "command": "taskflows.undo",
                    "when": "view == 'TaskFlows'",
                    "group": "navigation@1"
                },
                {
                    "command": "taskflows.redo",
                    "when": "view == 'TaskFlows'",
                    "group": "navigation@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "taskflows.toggleTaskCompletion",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "inline@1"
                },
                {
                    "command": "taskflows.editTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "inline@2"
                },
                {
                    "command": "taskflows.deleteTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "inline@3"
                },
                {
                    "command": "taskflows.addSubTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "inline@4"
                },
                {
                    "command": "taskflows.toggleTaskCompletion",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "1_modification@1"
                },
                {
                    "command": "taskflows.editTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "1_modification@2"
                },
                {
                    "command": "taskflows.deleteTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "1_modification@3"
                },
                {
                    "command": "taskflows.addSubTask",
                    "when": "view == 'TaskFlows' && viewItem == task",
                    "group": "2_creation@1"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "dev": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "~18.19.68",
        "@types/uuid": "^9.0.8",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^8.57.1",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "uuid": "^9.0.1"
    }
}